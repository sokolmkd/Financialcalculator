<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            style="@style/compound_text_view"
            android:text="Principal Amount" />

        <EditText
            android:id="@+id/compound_principal_amoun"
            style="@style/compound_edit_text" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            style="@style/compound_text_view"
            android:text="Monthly Deposit" />

        <EditText
            android:id="@+id/compound_monthlyDeposit"
            style="@style/compound_edit_text" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            style="@style/compound_text_view"
            android:text="Period (month)" />

        <EditText
            android:id="@+id/compound_period"
            style="@style/compound_edit_text" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            style="@style/compound_text_view"
            android:text="AnnualInterest Rate%" />

        <EditText
            android:id="@+id/compound_interestRate"
            style="@style/compound_edit_text" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            style="@style/compound_text_view"
            android:text="Compounding" />

        <Spinner
            android:id="@+id/compoundingSpinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="35dip"
            android:layout_weight="0.45"
            android:ems="10"
            android:gravity="left"
            android:inputType="numberSigned" >

            <requestFocus />
        </Spinner>
    </LinearLayout>

    <LinearLayout
        style="?android:buttonBarStyle"
        android:layout_marginTop="50dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:background="@drawable/bottom_buttons"
        >

        <Button
            style="?android:buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/reset" />

        <Button
            style="?android:buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/calculate" />
    </LinearLayout>

</LinearLayout>