<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/retierment_grid_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_weight="1"
    android:divider="?android:dividerHorizontal"
    android:orientation="horizontal"
    android:showDividers="middle" >

    <TextView
        android:id="@+id/retierment_text_view"
        style="@style/retierment_grid_text_view"
        android:text="Annual Salary Raise%" />

    <EditText
        android:id="@+id/retierment_edit_text"
        style="@style/retierment_grid_edit_text" >

    </EditText>

    <ImageButton
        style="?android:borderlessButtonStyle"
        android:id="@+id/minus"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.10"
        android:src="@drawable/minus"
       
        />

    <ImageButton
        style="?android:borderlessButtonStyle"
        android:id="@+id/plus"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.10"
        android:src="@drawable/plus"
         />

</LinearLayout>